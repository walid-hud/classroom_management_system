{
  "compilerOptions": {
    "target": "esnext",              
    "module": "nodenext",            
    "rootDir": "./src",                 
    "outDir": "./dist",      
    "noUnusedLocals": true,        
    "strict": true,                  
    "esModuleInterop": true,         
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src/index.ts"],         
  "exclude": ["node_modules"]        
}
